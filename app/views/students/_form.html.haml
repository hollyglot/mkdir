= form_for @student do |f|
  - if @student.errors.any?
    #error_explanation
      %h2= "#{pluralize(@student.errors.count, "error")} prohibited this student from being saved:"
      %ul
        - @student.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :first_name
    = f.text_field :first_name
  .field
    = f.label :last_name
    = f.text_field :last_name
  .field
    = f.label :cohort
    = f.text_field :cohort
  .field
    = f.label :address_1
    = f.text_field :address_1
  .field
    = f.label :address_2
    = f.text_field :address_2
  .field
    = f.label :city
    = f.text_field :city
  .field
    = f.label :state_province
    = f.text_field :state_province
  .field
    = f.label :postal_code
    = f.text_field :postal_code
  .field
    = f.label :country
    = f.text_field :country
  .field
    = f.label :phone_number
    = f.number_field :phone_number
  .field
    = f.label :user
    = f.text_field :user
  .field
    = f.label :linkedin
    = f.text_field :linkedin
  .field
    = f.label :github
    = f.text_field :github
  .field
    = f.label :twitter_handle
    = f.text_field :twitter_handle
  .field
    = f.label :blog
    = f.text_field :blog
  .field
    = f.label :personal_website
    = f.text_field :personal_website
  .field
    = f.label :mentor
    = f.select(:mentor, options_for_select([['I\'m a mentor', 'mentor'], ['I\'m looking for a mentor', 'looking'], ['I have a mentor', 'mentee']], 'looking'))
  .field
    = f.label :job_status
    = f.select(:job_status, options_for_select([['I\'m looking for a job', 'looking'], ['I\'m open to offers', 'offers'], ['I\'m insanely happy with my job', 'insane']], 'looking'))
  .field
    = f.label :entrepreneur
    = f.select(:entrepreneur, options_for_select([['I\'m starting a business', 'startup'], ['I\'m looking for cofounders', 'cofounders'], ['My business is hiring', 'hiring'], ['I still work for the man', 'slave']], 'startup'))
  .actions
    = f.submit 'Save'
