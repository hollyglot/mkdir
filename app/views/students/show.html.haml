.container.container-1
  .div.row-fluid
    .span12
      .div-2
        .well.div-1.div-3
          %h1#profile_heading Alumni Profile
        .well.div-1.div-4
          - if @profile
            %img.pull-left.image{:src => @profile.picture}
          .badge.badge-info.pull-right 1st
          .hero-unit
            %h2.heading.heading-1
              = @student.user.name
            - if @profile  
              %p
                = @profile.current_companies[0][:current_title]
            %p &nbsp;
            %div.btns
              %a.btn.btn-custom.pull-left{:href =>"#"}Add me to your network
            %h1.heading
          %p.p-1
       
          %table.table
            %tbody
              %tr
                %td
                  %strong Cohort
                %td 
                  = @student.cohort
              %tr
                %td
                  %strong Email
                %td
                  %a{:href=> "mailto:#{@student.user.email}"}= @student.user.email
              %tr
                %td
                  %strong Mobile
                %td
                  - unless @student.phone_number.nil? 
                    = number_to_phone(@student.phone_number, area_code: true) 
              %tr
                %td
                  %strong City
                %td 
                  - unless @student.city.empty? 
                    = @student.city + ","
          
                  - unless @student.state_province.empty? 
                    = @student.state_province       
          .well.no-hover
            - unless @student.blog.blank? 
              %a{:href => @student.blog}
                .icon.icon-rss
            - unless @student.github.blank? 
              %a{:href => @student.github}
                .icon.icon-github
            - unless @student.linkedin.blank?
              %a{:href => @student.linkedin}
                .icon.icon-linkedin-sign
            - unless @student.twitter_handle.blank?
              %a{:href=> "http://www.twitter.com/#{@student.twitter_handle}"}
                .icon.icon-twitter-sign
          - @profile.skills.sort().each do |skill|
            %span.badge.badge-info.skills
              = skill