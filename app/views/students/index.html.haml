%h1 MakerSquare Students

-if (! @students)
  %table
    %tr
      %th First name
      %th Last name
      %th Cohort
      %th Address 1
      %th Address 2
      %th City
      %th State province
      %th Postal code
      %th Country
      %th Phone number
      %th User
      %th Linkedin
      %th Github
      %th Twitter handle
      %th Blog
      %th Personal website
      %th Mentor
      %th Job status
      %th Entrepreneur
      %th
      %th
      %th
    - @students.each do |student|
      %tr
        %td= student.first_name
        %td= student.last_name
        %td= student.cohort
        %td= student.address_1
        %td= student.address_2
        %td= student.city
        %td= student.state_province
        %td= student.postal_code
        %td= student.country
        %td= student.phone_number
        %td= student.user
        %td= student.linkedin_id
        %td= student.github
        %td= student.twitter_handle
        %td= student.blog
        %td= student.personal_website
        %td= student.mentor
        %td= student.job_status
        %td= student.entrepreneur
        %td= link_to 'Show', student
        %td= link_to 'Edit', edit_student_path(student)
        %td= link_to 'Destroy', student, :method => :delete, :data => { :confirm => 'Are you sure?' }
%br

-if (current_user.status) == 'admin'
  = link_to 'New Student Profile', new_student_path
