.container#maincontainer
  .content#maincontent
    .row#mainrow
      .span12#mainspan
        %h1 MakerSquare Students
        - if @students
          - @students.each do |student|
            
            - profile = Linkedin::Profile.get_profile(student.linkedin)
            
            %div.float-left
              %div.float-left
                - if (profile)
                  %div.linkedin-img
                    %img.shadow{:src => profile.picture}
              %div
                %h3
                  = link_to "#{student.first_name} #{student.last_name}", student
        - else
          Where did all our students go? Check your database!
        %br


