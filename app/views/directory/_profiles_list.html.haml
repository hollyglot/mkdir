.results
  Search Results:
  %strong 
    = @people.length
    - if @people.length > 1 || @people.length == 0
      = " people"
    - else
      = " person"
  / within
  / %strong
  / 8000 
  / = @distance
  / %strong miles.
  / params[:radius]

- if @people.length > 0
  %div.display_table
    %table
      %thead
        %tr{:style => "color: #34495e;"}
          %th
          %th{:style => "width:190px"} Name
          %th{:style => "width:120px"} City
          %th{:style => "width:100px"} State
          %th{:style => "width:100px"} Category
      - @people.each do |person|
        %tbody  
          %tr
            %td#display_table_image
              %div.linkedin-img
                = link_to person do
                  =image_tag person.user.gravatar, class: "shadow"
            %td{:style => "width:190px"}
              = link_to person.name, person 
            %td{:style => "width:120px"}
              = person.city
            %td{:style => "width:100px"}
              = person.state
            %td{:style => "width:100px"}
              - if person.class == 'HiringPartner'
                Hiring Partner
              - elsif person.class == 'StaffMember'
                Staff
              - else
                = person.class
- else
  %div.display_table
    %table
      %thead
        %tr{:style => "color: #34495e;"}
          %th{:width => "50px"}
          %th Oh no! We couldn't find anyone who matched your search. Better luck next time.

- if @people.length > 0
  .results#bottom
    Search Results:
    %strong 
      = @people.length
      - if @people.length > 1 || @people.length == 0
        = " people"
      - else
        = " person"
    / within
    / %strong
    /   8000
    / = @distance
    / %strong miles.
