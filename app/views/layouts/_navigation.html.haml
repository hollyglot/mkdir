= link_to "", root_path, :class => 'brand'
%div.nav-collapse.collapse
  %ul.nav
    - if user_signed_in?
      %li
        = link_to 'Admin', rails_admin_path
    - if user_signed_in?
      %li
        = link_to 'Directory', root_path
  - if user_signed_in?
    %div.btn-group.pull-right
      = link_to root_path, class: 'btn dropdown-toggle', :'data-toggle' => 'dropdown' do
        - unless current_user.student.nil?
          = image_tag current_user.gravatar, class: 'user_pic'
        = current_user.name
        %span.caret
      %ul.dropdown-menu
        %li
          = link_to '<i class="icon-wrench"></i> Edit Your Account Settings'.html_safe, edit_user_registration_path
        - unless current_user.student.nil?
          %li.divider
            %li
              = link_to '<i class="icon-user"></i> View Your Student Profile'.html_safe, student_path(current_user.student.id)
            %li
              = link_to '<i class="icon-double-angle-right"></i> Edit Your Student Profile'.html_safe, edit_student_path(current_user.student.id)
        - unless current_user.mentor.nil?
          %li.divider
            %li
              = link_to '<i class="icon-user"></i> View Your Mentor Profile'.html_safe, mentor_path(current_user.mentor.id)
            %li
              = link_to '<i class="icon-double-angle-right"></i> Edit Your Mentor Profile'.html_safe, edit_mentor_path(current_user.mentor.id)
        - unless current_user.hiring_partner.nil?
          %li.divider
            %li
              = link_to '<i class="icon-user"></i> View Your Hiring Partner Profile'.html_safe, hiring_partner_path(current_user.hiring_partner.id)
            %li
              = link_to '<i class="icon-double-angle-right"></i> Edit Your Hiring Partner Profile'.html_safe, edit_hiring_partner_path(current_user.hiring_partner.id)
        - unless current_user.staff_member.nil?
          %li.divider
            %li
              = link_to '<i class="icon-user"></i> View Your Staff Profile'.html_safe, staff_member_path(current_user.staff_member.id)
            %li
              = link_to '<i class="icon-double-angle-right"></i> Edit Your Staff Profile'.html_safe, edit_staff_member_path(current_user.staff_member.id)
        %li.divider
          %li
            = link_to '<i class="icon-power-off"></i> Logout'.html_safe, destroy_user_session_path, :method=>'delete'

