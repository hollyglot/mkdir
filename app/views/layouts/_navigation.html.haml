= link_to "", root_path, :class => 'brand'
%div.nav-collapse.collapse
  %ul.nav
    - if user_signed_in? && current_user.admin?
      %li
        = link_to 'Admin', rails_admin_path
    - if user_signed_in?
      %li
        = link_to 'Logout', destroy_user_session_path, :method=>'delete'
    - if user_signed_in? && (can? :update, @user)
      %li
        = link_to 'Edit Account', edit_user_registration_path
    - if user_signed_in? && current_user.student?
      %li
        = link_to 'Edit Profile', edit_student_path(@student)
    - if user_signed_in?
      %li
        = link_to 'Directory', students_path


